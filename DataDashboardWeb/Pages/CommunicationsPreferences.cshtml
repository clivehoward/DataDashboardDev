@page
@model DataDashboardWeb.Pages.CommunicationsPreferencesModel
@{
    ViewData["Title"] = "Communication Preferences";
    ViewData["MetaDescription"] = "Opt in or out of communications from Discovered Insights.";
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h2>Communication Preferences</h2>
    </div>
    <div class="col-md-3">
    </div>
</div>
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">

        <p>We would like to send you emails such as notifications about new features, special offers, or additional insights.</p>
        <p>Please let us know if you would like to receive these emails by selecting from the following two options.</p>

        <form method="post">

            <div class="form-group">

                <div>
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="CommunicationsPreferencesForm.IsOkay" value="true" />
                            Yes, I would like to receive these emails
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="CommunicationsPreferencesForm.IsOkay" value="false" />
                            No, I would prefer not to receive these emails
                        </label>
                    </div>
                </div>

                <span class="label label-warning" asp-validation-for="CommunicationsPreferencesForm.IsOkay"></span>

            </div>

            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-default">Save preferences</button>
                </div>
            </div>

        </form>

        <p><small>You can change your preference at any time by going to your "Account" in the portal. This does not include emails concerning your subscription such as renewals.</small></p>

    </div>
    <div class="col-md-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
