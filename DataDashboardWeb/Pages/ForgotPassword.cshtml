@page
@model DataDashboardWeb.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    ViewData["MetaDescription"] = "Complete this form if you have forgotten your password.";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h2>Forgot Password</h2>
    </div>
    <div class="col-md-4">
    </div>
</div>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">

        <p>Submit your subscription email address and receive an email to reset your password.</p>

        <form method="post">

            @if (string.IsNullOrWhiteSpace(Model.SuccessMessage) == false)
            {
                <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
            }
            @if (string.IsNullOrWhiteSpace(Model.ErrorMessage) == false)
            {
                <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
            }

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="ForgotPasswordForm.Email">Email</label>
                <input type="text" asp-for="ForgotPasswordForm.Email" class="form-control" placeholder="Email">
                <span class="label label-warning" asp-validation-for="ForgotPasswordForm.Email"></span>
            </div>

            <button type="submit" class="btn btn-default">Submit</button>

        </form>

    </div>
    <div class="col-md-4">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
