@page
@model DataDashboardWeb.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h2>Reset Password</h2>
    </div>
    <div class="col-md-4">
    </div>
</div>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">

        <form method="post">

            @if (string.IsNullOrWhiteSpace(Model.SuccessMessage) == false)
            {
                <div class="alert alert-success" role="alert">@Html.Raw(Model.SuccessMessage)</div>
            }
            @if (string.IsNullOrWhiteSpace(Model.ErrorMessage) == false)
            {
                <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
            }

            <input type="hidden" asp-for="ResetPasswordForm.Code" />

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="ResetPasswordForm.Email">Email</label>
                <input type="text" asp-for="ResetPasswordForm.Email" class="form-control" placeholder="Email">
                <span class="label label-warning" asp-validation-for="ResetPasswordForm.Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="ResetPasswordForm.Password">Password</label>
                <input type="password" asp-for="ResetPasswordForm.Password" class="form-control" placeholder="New Password">
                <span class="label label-warning" asp-validation-for="ResetPasswordForm.Password"></span>
                <span class="help-block">
                    Passwords must be between 6 and 15 characters and contain:
                    <br />1 upper case letter
                    <br />1 lower case letter
                    <br />1 number
                </span>
            </div>

            <div class="form-group">
                <label asp-for="ResetPasswordForm.ConfirmPassword">Confirm Password</label>
                <input type="password" asp-for="ResetPasswordForm.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span class="label label-warning" asp-validation-for="ResetPasswordForm.ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-default">Reset</button>

        </form>

    </div>
    <div class="col-md-4">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
